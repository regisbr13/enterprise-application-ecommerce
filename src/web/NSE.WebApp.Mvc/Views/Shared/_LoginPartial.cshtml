@using NSE.WebApp.Mvc.Interfaces;
@inject IUser User;

<ul class="navbar-nav">
    @if (User.IsAuthenticated())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá @User.GetEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identity" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-success nav-button" asp-controller="Identity" asp-action="Register">Criar conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary" asp-controller="Identity" asp-action="Login">Entrar</a>
        </li>
    }
</ul>