@require '../consts.styl';

.home {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  background: $primary-color;
  background: $primary-gradient;

  &__container {
    width: 50%;
    height: 100%;
    padding: 0;
    overflow: hidden;

    &--message {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 5%;
      color: $white-color;
      height: 100%;
    }

    &--form {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
      padding: 5%;
      width: 100%;
      background-color: $white-color;
    }
  }
}
