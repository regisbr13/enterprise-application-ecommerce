@require '../consts.styl';
@require '../mixins.styl';

@media screen and (min-width: 501px) {
  #desktop {
    margin: 0;
    visibility: visible;
  }

  #smartphone  {
    display: none;
  }
}

@media screen and (max-width: 500px) {
  #desktop {
    display: none;
  }

  #smartphone {
    visibility: visible;
    margin: 0;
    width: 100%;
  }
}

.home {
  flex(row, flex-start, flex-start);
  width: 100%;
  height: 100%;
  background: $primary-color;
  background: $primary-gradient;

  &__container {
    width: 50%;
    height: 100%;
    padding: 0;
    overflow: hidden;

    &__smartphone {
      width: 100%;
    }

    &__message {
      flex(column, center, center);
      padding: 5%;
      color: $white-color;
      height: 100%;
    }

    &__form {
      flex(column, center, center);
      min-height: 100%;
      padding: 5%;
      width: 100%;
      background-color: $another-grey;

      &--logo {
        -webkit-animation: 1s ease 0s normal forwards 1 fadein;
        animation: 1s ease 0s normal forwards 1 fadein;

        img {
          width: 100%;
        }
      }

      &__smartphone {
        background-color: transparent;

        &--logo {
          flex(row, center, center);
          margin-bottom: 20px;

          img {
            width: 50%;
          }
        }
      }

      &--back {
        margin-left: 25%;
        align-self: baseline;
      }

      &--next {
        margin-top: 20px;
        width: 50%;
      }
    }
  }
}
