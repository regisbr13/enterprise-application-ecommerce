@require '../../../consts.styl';
@require '../../../mixins.styl';

.register {
  flex(column, baseline, center);
  width: 100%;
  -webkit-animation: 1s ease 0s normal forwards 1 fadein;
  animation: 1s ease 0s normal forwards 1 fadein;

  &__form {
    width: 100%;

    &__item {
      margin-bottom: 15px;

      &__title {
        font-size: $default-font-size + 5px;
        font-weight: bold;
      }

      &__subtitle {
        font-size: $default-font-size + 2;
        font-weight: bold;
      }
    }
  }
}
